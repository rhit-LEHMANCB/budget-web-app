{
  "compilerOptions": {
    "module": "commonjs",
    "typeRoots": ["../global.d.ts", "./node_modules/@types"],
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/web"]
}